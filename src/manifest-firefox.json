{
  "manifest_version": 2,
  "name": "__MSG_ExtensionName__",
  "description": "__MSG_ExtensionDescription__",
  "version": "0.2.0",
  "author": "Danny Lin",
  "default_locale": "en",

  "content_security_policy": "script-src 'self' 'unsafe-eval' blob:; object-src 'self' blob:",

  "applications": {
    "gecko": {
      "id": "webarchiveviewer.beta@danny0838.addons.mozilla.org",
      "strict_min_version": "48.0",
      "update_url": "https://danny0838.github.io/webarchiveviewer/files/firefox/updates.json"
    }
  },

  "icons": {
    "16": "viewer_16.png",
    "48": "viewer_48.png",
    "128": "viewer_128.png"
  },

  "permissions": [
    "storage",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],

  "background": {
    "persistent": true,
    "scripts": [
      "lib/mime.js",
      "lib/jszip.js",
      "common.js",
      "background.js",
      "optionsAuto.js",
      "pageActionLoader.js"
    ]
  },

  "web_accessible_resources": [
    "lib/mime.js",
    "lib/jszip.js",
    "common.js",
    "zipviewer.js"
  ],

  "options_ui": {
    "browser_style": false,
    "page": "options.html"
  },

  "browser_action": {
    "default_icon": {
      "19": "viewer_19.png",
      "38": "viewer_38.png"
    },
    "default_title": "__MSG_BrowserActionTitle__"
  },

  "page_action": {
    "default_icon": {
      "19": "viewer_19.png",
      "38": "viewer_38.png"
    },
    "default_title": "__MSG_BrowserActionTitle__"
  }
}

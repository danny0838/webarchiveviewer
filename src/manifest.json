{
  "manifest_version": 2,
  "name": "__MSG_ExtensionName__",
  "description": "__MSG_ExtensionDescription__",
  "version": "0.1.0",
  "author": "Danny Lin",
  "default_locale": "en",

  "minimum_chrome_version": "49",

  "incognito": "split",

  "icons": {
    "16": "viewer_16.png",
    "48": "viewer_48.png",
    "128": "viewer_128.png"
  },

  "permissions": [
    "storage",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],

  "background": {
    "persistent": true,
    "scripts": [
      "lib/mime.js",
      "lib/jszip.js",
      "common.js",
      "background.js"
    ]
  },

  "web_accessible_resources": [
    "lib/mime.js",
    "lib/jszip.js",
    "common.js",
    "zipviewer.js"
  ],

  "options_ui": {
    "chrome_style": false,
    "page": "options.html"
  },

  "browser_action": {
    "default_icon": {
      "19": "viewer_19.png",
      "38": "viewer_38.png"
    },
    "default_title": "__MSG_BrowserActionTitle__"
  }
}
